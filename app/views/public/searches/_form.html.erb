<div class="search-form text-right pr-2", style="background-color: #ffffcc;">
 <% if customer_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
   <%= f.text_field :content %>
   <%= f.select :model, options_for_select({ "Item" => "item", "Genre" => "genre" }) %>
   <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
   <%= f.submit '検索', class: "btn btn-primary" %>
   <% end %>
 <% end %>
</div>