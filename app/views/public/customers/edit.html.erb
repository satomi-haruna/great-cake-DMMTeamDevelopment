<div class="container">
  <div class="row">
    <div class="col">
      <h3>会員情報編集</h3>

      <%= form_with model: @customer, url: customers_infomation_path, method: :patch do |f| %>
      <table class='table'>
      <!--%= render "public/shared/error_messages", resource: resource %>-->
        <tbody>
          <tr>
            <td class="field">
              <%= f.label :"氏名" %>
            </td>
            <td>
              <%= f.text_field :last_name, autofocus: true %>
            </td>
            <td>
              <%= f.text_field :first_name %>
            </td>
            <td></td>
          </tr>
          <tr>
            <td class="field">
              <%= f.label :"フリガナ" %>
            </td>
            <td>
              <%= f.text_field :last_name_kana %>
            </td>
            <td>
              <%= f.text_field :first_name_kana %>
            </td>
            <td></td>
          </tr>
          <tr>
            <td class="field">
              <%= f.label :"郵便番号" %>
            </td>
            <td>
              <%= f.text_field :post_code %>
            </td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td class="field">
              <%= f.label :"住所" %>
            </td>
            <td colspan="3">
              <%= f.text_field :address, :size=>"70" %>
            </td>
          </tr>
          <tr>
            <td class="field">
              <%= f.label :"電話番号" %>
            </td>
            <td>
              <%= f.text_field :phone_number %>
            </td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td class="field">
              <%= f.label :"メールアドレス" %>
            </td>
            <td>
              <%= f.email_field :email, autocomplete: "email" %>
            </td>
            <td></td>
            <td></td>
          </tr>

          <tr>
            <td></td>
            <td>
              <%= f.submit "編集内容を保存", class:"btn btn-success" %>
            </td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <% end %>

      <div class='row'>
        <%= form_with model: @customer, url: customers_unsubscribe_path, method: :get do |f| %>
          <%= f.submit "退会する", class:"btn btn-danger" %>
        <% end %>
      </div>

    </div>
  </div>
</div>