<div class='container'>
  <div>
    <h4 class="text-center my-4 mt-5", style="background-color: #eee; width:auto; padding-left: 12px;">
      <b><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</b>
    </h4>
    <table class='table table-borderless'>
      <tbody>
        <tr>
          <th>会員ID</th>
          <td colspan='2'><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td colspan='2'><%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td colspan='2'><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td colspan='2'><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td colspan='2'><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td colspan='2'><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td colspan='2'><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td colspan='2'>
            <% if @customer.is_deleted == false %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-danger">退会</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><!--空白のセル--></td>
          <td>
            <!--リンクパスの変更必要あり-->
            <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
          </td>
          <td>
            <!--リンクパスの変更必要あり-->
            <%= link_to "注文履歴一覧を見る", about_path, class:"btn btn-primary" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>