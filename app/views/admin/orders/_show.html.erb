<table class="table text-center table-bordered">
  <thead class="table-success">
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価（税込）</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col">製作ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr class="vertical-align: middle">
      <td><%= order_detail.item.name %></td>
      <td>&yen;<%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td>&yen;<%= order_detail.sub_total.to_s(:delimited) %></td>
      <td>
        <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch, local: true do |f| %>
        <%= f.select :making_status, OrderDetail.making_statuses.keys.map{|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
        <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>