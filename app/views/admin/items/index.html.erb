<div class='container mt-5'>
  <div class='row g-3'>
    <div class='col-md-6 offset-2'>
      <h4 class="text-center my-4 mt-5", style="background-color: #eee; width:200px;"><b>商品一覧</b></h4>
    </div>
    <div class='col-md-3 text-center my-4 mt-4'>
      <%= link_to new_admin_item_path, style:"color:#555; font-size:40px;" do %>
        <i class="fa-sharp fa-solid fa-circle-plus"></i>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-8 offset-2'>
      <table class='table table-hover'>
        <thead>
          <tr style="background-color: #f5f5f5;">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do %>
               <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %>円</td>
            <td><%= item.genre.name %></td>
              <% if item.is_active == true %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-danger">販売停止中</td>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center align-items-end mt-5">
      <%= paginate @items %>
      </div>
    </div>
  </div>
</div>